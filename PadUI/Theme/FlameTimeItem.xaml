<UserControl x:Class="PadUI.Theme.FlameTimeItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PadUI.Theme"
             mc:Ignorable="d" 
             Name="FlameTimeItemControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" Margin="5"
                HorizontalAlignment="Center">
        <TextBlock
                 FontFamily="Arial"
                 FontSize="18"
                 Foreground="#FFFFFF"
                 Text="{Binding LabelText,ElementName=FlameTimeItemControl}"/>
        <TextBox Width="80" Height="25" 
                 FontFamily="Arial"
                 FontSize="18"
                 HorizontalAlignment="Left"
                 VerticalContentAlignment="Center" 
                 TextAlignment="Center"
                 Text="{Binding Value,ElementName=FlameTimeItemControl}" 
                 GotFocus="TextBox_GotFocus"/>
    </StackPanel>
</UserControl>
